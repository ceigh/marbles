{
  "name": "marbles",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build && del dist/js",
    "lint": "yarn lint:es && yarn lint:style",
    "lint:es": "vue-cli-service lint --no-fix",
    "lint:style": "vue-cli-service lint:style --no-fix",
    "preview": "serve -s dist"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "modern-css-reset": "^1.4.0",
    "vue": "^3.0.0",
    "vue-dragscroll": "^3.0.0",
    "vue3-lazyload": "^0.2.2-beta"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "del-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "html-webpack-inline-source-plugin": "^1.0.0-beta.2",
    "html-webpack-plugin": "^4.0.0",
    "lint-staged": "^11.0.0",
    "sass": "^1.26.5",
    "sass-loader": "^10.2.0",
    "serve": "^12.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "~4.3.5",
    "webpack": "^4.4.0",
    "yorkie": "^2.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e",
    "pre-push": "yarn lint"
  },
  "lint-staged": {
    "*.{vue,ts,js}": "yarn lint:es",
    "*.{vue,html,css,scss}": "yarn lint:style"
  },
  "stylelint": {
    "root": true,
    "extends": "stylelint-config-standard-scss"
  }
}
